<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/account_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="James Bond"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="34sp"/>

        <TextView
            android:id="@+id/account_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0149603509"
            android:textAlignment="center"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/deposit_amount_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Amount"
            android:inputType="number"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/depositor_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Name"
            android:inputType="text"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/deposit_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/deposit_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Email (optional)"
            android:inputType="textEmailAddress"
            android:textSize="22sp"/>

    </LinearLayout>

