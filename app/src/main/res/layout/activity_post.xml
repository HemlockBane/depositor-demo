<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Account Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/account_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Account Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/account_number_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Deposit Amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/deposit_amount_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Depositor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/depositor_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Depositor Phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/depositor_phone_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Depositor Email"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/depositor_email_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="25sp"
                tools:text="Details" />
        </LinearLayout>

    </ScrollView>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/post_button_details"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="34dp"
        app:fabSize="auto"
        android:src="@drawable/ic_send_white_48dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_button_details"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="34dp"
        app:fabSize="auto"
        android:src="@drawable/ic_create_white_48dp" />

</RelativeLayout>
